= paginate @search.grouped_data

.ts-gallery.uk-grid-small{ uk: { grid: true } }
  - @search.grouped_data.each do |page|
    %div
      .uk-card.uk-card-default.ts-gallery-card
        = link_to page, class: "uk-link-reset ts-gallery-card-link" do
          .ts-gallery-img>
            - if page.icon
              = image_tag page.icon
            - else
              %span{ uk: { icon: "image" }}
          .uk-overlay.uk-overlay-primary.uk-position-bottom.uk-padding-small= CGI.unescapeHTML(page.title).html_safe

= paginate @search.grouped_data
